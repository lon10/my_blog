= simple_form_for post, url: url do |f|
  .form-group
    = f.input :title, required: false, input_html: { class: 'form-control' }
  .form-group
    = f.input :text, required: false, as: :ckeditor, input_html: { class: 'form-control', ckeditor: { height: 500 }  }
  .form-group
    = link_to(t('views.controls.back'), admin_path, class: 'btn btn-default')
    = f.submit t('views.controls.save'), class: 'btn btn-primary'
